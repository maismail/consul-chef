datacenter = "lc"
server = true
bootstrap_expect = <%= node['consul']['master']['bootstrap_expect'] %>
ui = <%= node['consul']['master']['ui'] %>
data_dir = "<%= node['consul']['data_dir'] %>"
enable_local_script_checks = true
performance = {
    raft_multiplier = 1
}

verify_incoming = true
verify_outgoing = true
verify_server_hostname = false
auto_encrypt = {
   allow_tls = true
}
ca_file = "<%= node["kagent"]["certs"]["root_ca"] %>"
cert_file = "<%= node["kagent"]["certs_dir"] %>/pub.pem"
key_file = "<%= node["kagent"]["certs_dir"] %>/priv.key"
ports = {
   http = -1,
   https = <%= node['consul']['http_api_port'] %>
}